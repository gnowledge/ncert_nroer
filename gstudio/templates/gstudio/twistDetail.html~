    $("#showstatus").trigger('click');
    $("#content").css({"width": "620px",});
    $("#chart").hide();
    $("#graphcss").hide();
    $(".savecontent").hide();
    $(".submitresponse").hide();
    $("#editthreadsave").hide();
    url="/gstudio/resources/loom/status/"+{{thread.id}}
    $.ajax({
         url: url,
         type: 'GET',
         success: function(data){
              $("#status").html(data);
                               }
     });

});
</script>


